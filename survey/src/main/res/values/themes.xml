    <style name="Theme.BaseSurveyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/Widget.SurveyApp.CardView</item>
        <item name="android:textAppearance">@style/TextAppearance.SurveyApp.Body1</item>
    </style>

    <style name="Theme.SurveyApp" parent="Theme.BaseSurveyApp" />

    <style name="Theme.SurveyApp.NoActionBar">
        <item name="windowActionBar">false</item>
