    <style name="Theme.SurveyApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.SurveyApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
